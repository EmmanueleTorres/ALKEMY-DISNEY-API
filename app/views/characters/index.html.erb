<div class="container mt-3">
  <div class="d-flex align-items-center bd-highlight">
    <h1 class="flex-grow-1 bd-highlight">Personajes</h1>
    <%= link_to "+ Personaje", new_character_path, class: "btn btn-primary bd-highlight" %>
  </div>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @characters.each do |character| %>
      <a href="<%=character_path(character) %>" class="text-decoration-none">
        <div class="col">
          <div class="card mb-3">
            <%= cl_image_tag character.photo.key, class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><%= character.name %></h5>
            </div>
          </div>
        </div>
      </a>
    <% end %>
  </div>
</div>