<div class="container mt-3">
  <div class="d-flex align-items-center bd-highlight">
    <div class="flex-grow-1 bd-highlight">
      <h1 class="fs-1 pb-0"><%= @character.name %></h1>
    </div>
    <div class="bd-highlight">
      <%= link_to "Editar", edit_character_path(@character), class: "btn btn-primary" %>
      <%= link_to "Borrar" , character_path(@character), method: :delete, data: { confirm: "¿Está seguro?" }, class: "btn btn-danger ms-2" %>
      <%= link_to "Volver", characters_path, class: "btn btn-secondary ms-2" %>
    </div>
  </div>
  <table class="table">
    <tbody>
      <tr>
        <th scope="row">Age</th>
        <td><%= @character.age %></td>
      </tr>
      <tr>
        <th scope="row">Weight</th>
        <td><%= @character.weight %></td>
      </tr>
      <tr>
        <th scope="row">Historia</th>
        <td><%= @character.history %></td>
      </tr>
    </tbody>
  </table>
  <div class="row row-cols-1 row-cols-md-3 g-4 my-2">
    <% @character.films.each do |film| %>
      <% cast = Cast.find_by(film: film, character: @character) %>
      <div class="col">
        <div class="card mb-3">
          <%= cl_image_tag film.photo.key, class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= film.title %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>