<div class="container mt-3">
  <div class="d-flex align-items-center bd-highlight">
    <h1 class="flex-grow-1 bd-highlight">Pel√≠culas</h1>
    <%= link_to "+ Pelicula", new_film_path, class: "btn btn-primary bd-highlight" %>
